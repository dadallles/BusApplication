@model BusApplication.Models.BankAccount

@{
    ViewData["Title"] = "Konto bankowe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white mt-3 text-center">Konto bankowe</h1>
    <div class="container">
        <div class="row bg-dark text-white p-3 m-3">
            <div class="form-group px-3 row col-12">
                <div class="col-4">
                    <label asp-for="CompanyName"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CompanyName" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group px-3 row col-12">
                <div class="col-4">
                    <label asp-for="CompanyAddress"></label>
                </div>
                <div class="col-8">
                    <input asp-for="CompanyAddress" class="form-control" disabled />
                </div>
            </div>
            <div class="form-group px-3 row col-12">
                <div class="col-4">
                    <label asp-for="AccountNumber"></label>
                </div>
                <div class="col-8">
                    <input asp-for="AccountNumber" class="form-control" disabled />
                </div>
            </div>
            <div class="row col-12">
                <div class="col-4"></div>
                <div class="col-4">
                    <button type="button" class="btn btn-primary form-control" onclick="location.href='@Url.Action("Edit", "BankAccount")'">Edytuj dane do przelewów</button>
                </div>
                <div class="col-4"></div>
            </div>
        </div>
    </div>
