@page
@model PersonalDataModel
@{
    ViewData["Title"] = "Usuwanie konta";
    ViewData["ActivePage"] = ManageNavPages.PersonalData;
}

<h4>@ViewData["Title"]</h4>

<div class="row">
    <div class="col-md-6">
        <p>
            <strong>Usuwając konto usuwasz nieodwracalnie wszystkie swoje dane.</strong>
        </p>
        @if (User.IsInRole(BusApplication.Utility.StaticData.AdminRole))
        {
             <p>Użytkownik z rolą Admin nie może usunąć konta!</p>
        }
        else
        {
            <p>
                <a id="delete" asp-page="DeletePersonalData" class="btn btn-primary">Usuń konto</a>
            </p>
        }
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}