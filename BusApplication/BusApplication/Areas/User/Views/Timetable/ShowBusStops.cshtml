@model BusApplication.Models.ViewModels.BusStopListBetweenBusStopsVM

@{
    ViewData["Title"] = "Pokaż przystanki";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-white mt-3 text-center">Rozkład jazdy dla wybranego odcinka</h1>

<div class="container">
    <div class="row">
        <div class="col-3"></div>
        <div class="col-6">
            @if (Model.busStopBetweenBusStopsVMs != null)
            {
                <table class="table table-striped table-bordered table-sm mt-3 tab" cellspacing="0" width="100%">
                    <thead class="table-info">
                        <tr>
                            <td>Przystanek</td>
                            <td>Przyjazd</td>
                            <td>Odjazd</td>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.busStopBetweenBusStopsVMs)
                        {
                            <tr class="table-light">
                                <td>@item.BusStopName</td>
                                <td>@item.ArrivalTime</td>
                                <td>@item.DepartureTime</td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            <div class="row">
                <button class="btn btn-primary form-control m-3" onclick="GoBack();">Wróć</button>
            </div>
        </div>
        <div class="col-3"></div>
    </div>
</div>

@section Styles {
    <style>
        .tab {
            max-width: 600px;
            margin: 0 auto;
        }

        #tab th, td {
            white-space: nowrap;
            width: 200px !important;
        }

        .dataTables_empty {
            background-color: white;
            color: black;
        }
    </style>
}

@section scripts {
    <script>
        function GoBack() {
            history.go(-1);
        }

        $(document).ready(function () {
            $('.tab').DataTable({
                searching: false,
                paging: false,
                info: false,
                sorting: false,
                "language": {
                    "url": "https://cdn.datatables.net/plug-ins/1.10.21/i18n/Polish.json"
                }

            });
            $('.dataTables_length').addClass('bs-select');
        });
    </script>
}
